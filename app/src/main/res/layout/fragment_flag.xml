<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.FlagFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/previousMonthButtonFlag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:text="◀"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/monthTextViewFlag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/previousMonthButtonFlag"
            android:layout_alignBottom="@+id/previousMonthButtonFlag"
            android:layout_marginStart="7dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="10dp"
            android:layout_toStartOf="@+id/nextMonthButtonFlag"
            android:layout_toEndOf="@id/previousMonthButtonFlag"
            android:gravity="center"
            android:text="Month"
            android:textSize="18sp" />

        <Button
            android:id="@+id/nextMonthButtonFlag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:text="▶"
            android:textSize="24sp" />

        <androidx.cardview.widget.CardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/CardView1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/nextMonthButtonFlag"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            app:cardBackgroundColor="@color/purple"
            app:cardCornerRadius="10dp">

            <TextView
                android:id="@+id/CardTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名稱：--\n\n餘額：$0.0 \n\n日期：yyyy-MM-dd"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"/>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</FrameLayout>
